        <item name="android:windowExitAnimation">@anim/anim_popu_out</item>
    </style>

    <style name="anim_show_from_top" >
        <item name="android:windowEnterAnimation">@anim/anim_popu_in_top</item>
        <item name="android:windowExitAnimation">@anim/anim_popu_out_top</item>
    </style>

    <style name="anim_show_from_left" >
        <item name="android:windowEnterAnimation">@anim/anim_popu_in_left</item>
        <item name="android:windowExitAnimation">@anim/anim_popu_out_left</item>
    </style>

    <style name="anim_show_from_right" >
        <item name="android:windowEnterAnimation">@anim/anim_popu_in_right</item>
        <item name="android:windowExitAnimation">@anim/anim_popu_out_right</item>
    </style>

    <style name="anim_show_from_anchor_down" >
        <item name="android:windowEnterAnimation">@anim/anim_popu_in_anchor_down</item>
        <item name="android:windowExitAnimation">@anim/anim_popu_out_anchor_down</item>
    </style>

    <style name="anim_show_from_anchor_left" >
        <item name="android:windowEnterAnimation">@anim/anim_popu_in_anchor_left</item>
        <item name="android:windowExitAnimation">@anim/anim_popu_out_anchor_left</item>
